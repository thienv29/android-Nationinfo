<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NationViewActivity"

    >


    <ImageView
        android:id="@+id/nationMap"
        android:layout_width="420dp"
        android:layout_height="210dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_baseline_downloading_24"/>

    <ImageView
        android:id="@+id/nationFlag"
        android:layout_width="87dp"
        android:layout_height="82dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nationMap"
        android:src="@drawable/ic_baseline_downloading_24" />

    <TextView
        android:id="@+id/countryName"
        android:layout_width="142dp"
        android:layout_height="24dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="12dp"
        android:text="Country Name"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/nationFlag"
        app:layout_constraintTop_toTopOf="@+id/nationFlag" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="78dp"
        android:layout_height="21dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="60dp"
        android:text="Continent"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nationFlag" />

    <TextView
        android:id="@+id/continent"
        android:layout_width="78dp"
        android:layout_height="21dp"
        android:layout_marginStart="176dp"
        android:layout_marginTop="60dp"
        android:text="Continent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nationFlag" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="79dp"
        android:layout_height="21dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="24dp"
        android:text="Population"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/population"
        android:layout_width="79dp"
        android:layout_height="21dp"
        android:layout_marginStart="176dp"
        android:layout_marginTop="24dp"
        android:text="Population"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="78dp"
        android:layout_height="20dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="24dp"
        android:text="Area(km)"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/areaKm"
        android:layout_width="167dp"
        android:layout_height="19dp"
        android:layout_marginStart="176dp"
        android:layout_marginTop="24dp"
        android:text="Area(km)"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/capitalName"
        android:layout_width="142dp"
        android:layout_height="24dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="8dp"
        android:text="Capital "
        app:layout_constraintStart_toEndOf="@+id/nationFlag"
        app:layout_constraintTop_toBottomOf="@+id/countryName" />
</androidx.constraintlayout.widget.ConstraintLayout>